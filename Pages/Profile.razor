@page "/profile"
@inject DisasterReliefFrontEnd.Services.AuthService AuthService
@using DisasterReliefFrontEnd.Models 

<h3>Profile</h3>

@if (user == null)
{
    <div class="alert alert-danger">You must be logged in to view this page.</div>
}
else
{
    <div class="card shadow-sm border-success">
        <div class="card-header bg-success text-white text-center">
            <h3>User Profile</h3>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input class="form-control" value="@user.Username" disabled />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input class="form-control" value="@user.Email" disabled />
            </div>
            <div class="mb-3">
                <label class="form-label">Age</label>
                <input class="form-control" type="number" @bind="user.Age" />
            </div>
            <div class="mb-3">
                <label class="form-label">Occupation</label>
                <input class="form-control" @bind="user.Occupation" />
            </div>
            <div class="mb-3">
                <label class="form-label">Prompt</label>
                <textarea class="form-control" rows="4" @bind="user.Prompt"></textarea>
            </div>

            <button class="btn btn-success w-100" @onclick="UpdateProfile">Save</button>

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-info mt-3">@message</div>
            }
        </div>
    </div>
}

@code {
    private User? user;
    private string message = string.Empty;

    protected override void OnInitialized()
    {
        user = AuthService.GetCurrentUser();
    }

    private void UpdateProfile()
    {
        if (user != null)
        {
            AuthService.UpdateProfile(user);
            message = "Profile updated successfully!";
        }
    }
}