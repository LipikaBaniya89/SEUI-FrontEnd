@page "/signup"
@inject DisasterReliefFrontEnd.Services.AuthService AuthService
@using DisasterReliefFrontEnd.Models

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h3>Signup</h3>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">First Name</label>
                    <input class="form-control" @bind="newUser.FirstName" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Last Name</label>
                    <input class="form-control" @bind="newUser.LastName" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" type="email" @bind="newUser.Email" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input class="form-control" type="password" @bind="newUser.Password" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <input class="form-control" @bind="newUser.Address" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Radius (meters)</label>
                    <input class="form-control" type="number" @bind="newUser.RadiusMeters" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <input class="form-control" @bind="newUser.Phone" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Skills (comma separated)</label>
                    <input class="form-control" @bind="skillsInput" @bind:event="oninput" />
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" @bind="newUser.WantsEmail" />
                    <label class="form-check-label">Receive Email Notifications</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" @bind="newUser.WantsSms" />
                    <label class="form-check-label">Receive SMS Notifications</label>
                </div>

                <button class="btn btn-danger w-100 mt-3" @onclick="RegisterUser">Signup</button>

                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert alert-info mt-3" role="alert">@message</div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private SignupRequest newUser = new SignupRequest();
    private string _skillsInput = "";
    private string skillsInput
    {
        get => _skillsInput;
        set
        {
            _skillsInput = value;
            newUser.Skills = _skillsInput
                .Split(',', StringSplitOptions.RemoveEmptyEntries)
                .Select(s => s.Trim())
                .ToList();
        }
    }

    private string message = string.Empty;

    private async Task RegisterUser()
    {
        bool success = await AuthService.RegisterAsync(newUser);
        message = success ? "Signup successful!" : "Signup failed!";
        if (success) newUser = new SignupRequest();
    }
}
